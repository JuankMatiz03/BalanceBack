generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["schemaEngineDriverAdapters"] 
}

datasource db {
  provider = "postgresql"
  schemas  = ["auth"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@schema("auth")
}